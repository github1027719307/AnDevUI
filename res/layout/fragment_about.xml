<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/about" />

        <com.kince.andevui.widget.shimmer.ShimmerTextView
        android:id="@+id/about_tv_shimmer"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="AndevUI"
        android:layout_centerHorizontal="true"
        android:textColor="@color/pink"
        android:textSize="45sp" />
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@id/about_tv_shimmer"
        android:text="AndevUI致力于安卓UI界面开发，为广大开发者提供一个学习、参考、交流的平台。"
        android:layout_marginTop="20dp"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="邮箱：andevui@126.com"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_email"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:text="Q Q：543781062"
        android:textColor="@color/white" />

</RelativeLayout>